= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :nickname, :class => 'control-label'
    .controls
      = f.text_field :nickname, :class => 'text_field'
  .control-group
    = f.label :avatar, :class => 'control-label'
    .controls
      = f.text_field :avatar, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :role, :class => 'control-label'
    .controls
      = f.text_field :role, :class => 'text_field'
  .control-group
    = f.label :blocked, :class => 'control-label'
    .controls
      = f.check_box :blocked, :class => 'check_box'
  .control-group
    = f.label :reward, :class => 'control-label'
    .controls
      = f.number_field :reward, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
