- model_class = OrderDish
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:order_id)
      %th= model_class.human_attribute_name(:dish_id)
      %th= model_class.human_attribute_name(:number)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @order_dishes.each do |order_dish|
      %tr
        %td= link_to order_dish.id, order_dish_path(order_dish)
        %td= order_dish.order_id
        %td= order_dish.dish_id
        %td= order_dish.number
        %td=l order_dish.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_order_dish_path(order_dish), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), order_dish_path(order_dish), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_order_dish_path, :class => 'btn btn-primary'
