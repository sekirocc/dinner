- model_class = OrderDish
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:order_id) + ':'
  %br
  = @order_dish.order_id
%p
  %strong= model_class.human_attribute_name(:dish_id) + ':'
  %br
  = @order_dish.dish_id
%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @order_dish.number

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), order_dishes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_order_dish_path(@order_dish), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), order_dish_path(@order_dish), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
