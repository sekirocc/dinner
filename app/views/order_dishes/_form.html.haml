= simple_form_for @order_dish, :html => { :class => 'form-horizontal' } do |f|
  = f.input :order_id
  = f.input :dish_id
  = f.input :number
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), order_dishes_path, :class => 'btn'
