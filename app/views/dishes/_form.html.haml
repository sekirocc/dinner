= simple_form_for @dish, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :desc, :input_html => { :rows => 3 }
  = f.input :price
  = f.input :disable
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), dishes_path, :class => 'btn'